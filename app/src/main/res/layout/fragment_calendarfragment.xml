<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="horizontal"
    tools:context=".calendarfragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:background="#E8F1F0"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <GridLayout
                            android:background="@drawable/borderred"
                            android:layout_width="0dp"
                            android:layout_weight="1.6"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:columnCount="1">

                                <androidx.cardview.widget.CardView

                                    app:cardCornerRadius="30dp"
                                    android:layout_height="110dp"
                                    android:elevation="30dp"

                                    android:layout_width="0dp"
                                    android:layout_columnWeight="1.6"
                                    android:layout_margin="2dp">
                                        <LinearLayout

                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                                <ImageView

                                                    android:alpha="1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="3.5"
                                                    android:src="@drawable/mon"
                                                    android:scaleType="fitXY"/>
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1"
                                                    android:text="सोमवार"
                                                    android:gravity="center"
                                                    android:textColor="@color/black"
                                                    android:layout_gravity="center"
                                                    android:textSize="20sp" />

                                        </LinearLayout>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:elevation="30dp"
                                    app:cardCornerRadius="30dp"
                                    android:layout_height="110dp"
                                    android:backgroundTint="@color/white"
                                    android:layout_width="0dp"
                                    android:layout_columnWeight="1.6"
                                    android:layout_margin="2dp">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                                <ImageView

                                                    android:alpha="1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="3.5"
                                                    android:src="@drawable/tue"
                                                    android:scaleType="fitXY"/>
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1"
                                                    android:text="मंगलवार"
                                                    android:gravity="center"
                                                    android:textColor="@color/black"
                                                    android:layout_gravity="center"
                                                    android:textSize="20sp" />

                                        </LinearLayout>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:elevation="30dp"
                                    app:cardCornerRadius="30dp"
                                    android:layout_height="110dp"
                                    android:backgroundTint="@color/white"
                                    android:layout_width="0dp"
                                    android:layout_columnWeight="1.6"
                                    android:layout_margin="2dp">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                                <ImageView

                                                    android:alpha="1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="3.5"
                                                    android:src="@drawable/wed"
                                                    android:scaleType="fitXY"/>
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1"
                                                    android:text="बुधवार"
                                                    android:gravity="center"
                                                    android:textColor="@color/black"
                                                    android:layout_gravity="center"
                                                    android:textSize="20sp" />

                                        </LinearLayout>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    app:cardCornerRadius="30dp"
                                    android:layout_height="110dp"
                                    android:backgroundTint="@color/white"
                                    android:layout_width="0dp"
                                    android:layout_columnWeight="1.6"
                                    android:layout_margin="2dp">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                                <ImageView

                                                    android:alpha="1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="3.5"
                                                    android:src="@drawable/thu"
                                                    android:scaleType="fitXY"/>
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1"
                                                    android:text="गुरुवार"
                                                    android:gravity="center"
                                                    android:textColor="@color/black"
                                                    android:layout_gravity="center"
                                                    android:textSize="20sp" />

                                        </LinearLayout>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    app:cardCornerRadius="30dp"
                                    android:layout_height="110dp"
                                    android:backgroundTint="@color/white"
                                    android:layout_width="0dp"
                                    android:layout_columnWeight="1.6"
                                    android:layout_margin="2dp">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                                <ImageView

                                                    android:alpha="1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="3.5"
                                                    android:src="@drawable/fri"
                                                    android:scaleType="fitXY"/>
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1"
                                                    android:text="शुक्रवार"
                                                    android:gravity="center"
                                                    android:textColor="@color/black"
                                                    android:layout_gravity="center"
                                                    android:textSize="20sp" />

                                        </LinearLayout>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    app:cardCornerRadius="30dp"
                                    android:layout_height="110dp"
                                    android:backgroundTint="@color/white"
                                    android:layout_width="0dp"
                                    android:layout_columnWeight="1.6"
                                    android:layout_margin="2dp">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                                <ImageView

                                                    android:alpha="1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="3.5"
                                                    android:src="@drawable/sat"
                                                    android:scaleType="fitXY"/>
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1"
                                                    android:text="शनिवार"
                                                    android:gravity="center"
                                                    android:textColor="@color/black"
                                                    android:layout_gravity="center"
                                                    android:textSize="20sp" />

                                        </LinearLayout>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    app:cardCornerRadius="30dp"
                                    android:layout_height="110dp"
                                    android:backgroundTint="@color/white"
                                    android:layout_width="0dp"
                                    android:layout_columnWeight="1.6"
                                    android:layout_margin="2dp">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                                <ImageView

                                                    android:alpha="1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="3.5"
                                                    android:src="@drawable/sun"
                                                    android:scaleType="fitXY"/>
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1"
                                                    android:text="रविवार"
                                                    android:gravity="center"
                                                    android:textColor="@color/black"
                                                    android:layout_gravity="center"
                                                    android:textSize="20sp" />

                                        </LinearLayout>

                                </androidx.cardview.widget.CardView>





                        </GridLayout>


                        <GridView
                            android:background="@drawable/borderred"
                            android:id="@+id/gridView"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_marginTop="2dp"
                            android:layout_height="match_parent"
                            android:numColumns="5"
                            android:horizontalSpacing="8dp"
                            android:verticalSpacing="8dp"
                            android:padding="16dp"
                            android:gravity="center"/>


                </LinearLayout>

        </ScrollView>













</LinearLayout>