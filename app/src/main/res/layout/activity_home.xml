<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F1F0"
    tools:context=".home">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/header"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="-130dp"
        android:padding="27dp"
        android:src="@drawable/splashtxt"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderred"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            app:iss_placeholder="@drawable/om"
            app:iss_no_dots="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:iss_auto_cycle="true"
            app:iss_period="3000"

            app:iss_delay="3000"
            app:iss_text_align="CENTER"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:background="@drawable/border"

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="123dp">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="113dp"
                android:layout_margin="2dp"
                android:backgroundTint="#F44336"
                android:elevation="30dp"
                app:cardCornerRadius="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:elevation="50dp"
                    android:backgroundTint="#F3CD5E"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:backgroundTint="#6F8EE8"
                            android:elevation="30dp"
                            android:layout_marginTop="-02dp"
                            app:cardCornerRadius="30dp">
                            <TextView
                                android:id="@+id/textViewMonth"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="21dp"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/textViewDate"
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:gravity="center" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:elevation="30dp"
                            android:backgroundTint="#1EA2DF"
                            android:layout_marginTop="-02dp"
                            app:cardCornerRadius="30dp">
                            <TextView
                                android:id="@+id/textViewDay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="20dp"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>





                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="113dp"
                android:elevation="30dp"
                android:backgroundTint="#E8F1F0"

                app:cardCornerRadius="30dp">

                <LinearLayout
                   android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/homedesc"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="19dp"/>

                    <TextView

                        android:id="@+id/homedesc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="19dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>





        </LinearLayout>


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2.5dp"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#E8F1F0"
                android:columnCount="2"
                android:padding="4dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/calendar"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"

                    app:cardCornerRadius="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="2"
                            android:background="@drawable/header"
                            android:gravity="center"
                            android:text="पंचांग"
                            android:textColor="@color/red"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/holiday"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/festival" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="2"
                            android:background="@drawable/header"
                            android:gravity="center"
                            android:text="त्यौहार"
                            android:textColor="@color/red"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/eclipse"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/eclipse" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="2"
                            android:background="@drawable/header"
                            android:gravity="center"
                            android:text="ग्रहण"
                            android:textColor="@color/red"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mantra"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/mantra" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="2"
                            android:background="@drawable/header"
                            android:gravity="center"
                            android:text="मंत्र"
                            android:textColor="@color/red"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/katha"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/manuscript" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="2"
                            android:background="@drawable/header"
                            android:gravity="center"
                            android:text="व्रत कथा"
                            android:textColor="@color/red"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>
        </ScrollView>


    </LinearLayout>



</LinearLayout>